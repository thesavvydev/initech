{
  "include": [
    "./src/**/*",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "src/",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "preserve",
    "target": "ES2017",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "exclude": [
    "node_modules"
  ]
}
